<div class="container">
  <div class="new-cocktail-button">
    <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-outline-info" %>
  </div>
  <% if @cocktails.any? %>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-md-4">
        <%= link_to cocktail_path(cocktail), action: 'go' do %>
          <div class="cocktail-card" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 300, crop: :scale %>');">
            <div class="cocktail-name">
              <%= cocktail.name %>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  <% else %>
    <p>You have no cocktails, click below to add one!</p>
  <% end %>
</div>